{
  "$schema": "https://docs.molt.bot/schema/config.json",
  "_comment": "Moltbot configuration optimized for Raspberry Pi with local LLM (LFM 1.2B)",
  "_promptModeOptions": {
    "full": "~30KB prompt - Cloud models only",
    "local": "~4.2KB prompt - Recommended for Pi (tool names only, compact format)",
    "none": "~50 bytes - Ultra-fast (just identity line, no tools)"
  },

  "models": {
    "providers": {
      "runanywhere": {
        "baseUrl": "http://localhost:8080/v1",
        "apiKey": "local",
        "api": "openai-completions",
        "models": [
          {
            "id": "LFM2.5-1.2B-Instruct-Q8_0",
            "name": "Lobster Brain (LFM 1.2B)",
            "contextWindow": 16384,
            "maxTokens": 4096,
            "reasoning": false,
            "input": ["text"],
            "cost": {
              "input": 0,
              "output": 0,
              "cacheRead": 0,
              "cacheWrite": 0
            }
          },
          {
            "id": "Qwen3-1.7B-Q8_0",
            "name": "Qwen3 1.7B (Local)",
            "contextWindow": 16384,
            "maxTokens": 4096,
            "reasoning": false,
            "input": ["text"],
            "cost": {
              "input": 0,
              "output": 0,
              "cacheRead": 0,
              "cacheWrite": 0
            }
          }
        ]
      }
    }
  },

  "agents": {
    "defaults": {
      "model": {
        "primary": "runanywhere/LFM2.5-1.2B-Instruct-Q8_0",
        "fallbacks": ["runanywhere/Qwen3-1.7B-Q8_0"]
      },
      "promptMode": "local",
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      }
    }
  },

  "messages": {
    "ackReactionScope": "group-mentions"
  },

  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },

  "gateway": {
    "mode": "local",
    "bind": "loopback",
    "port": 18789,
    "auth": {
      "mode": "token",
      "token": "REPLACE_WITH_SECURE_TOKEN"
    }
  },

  "plugins": {
    "entries": {
      "runanywhere": {
        "enabled": true
      },
      "voice-assistant": {
        "enabled": true
      },
      "whatsapp": {
        "enabled": true
      }
    }
  },

  "channels": {
    "voice-assistant": {
      "wsPort": 8082,
      "broadcastAllChannels": true,
      "accounts": {
        "default": {
          "name": "Pi Voice",
          "enabled": true
        }
      }
    }
  },

  "heartbeat": {
    "enabled": false
  }
}
